@model MVC_uppgift.ViewModels.CityCountryEdit

<form class="modal fade" id="editCountryCity" method="post" asp-action="UpdateCountryCity">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editCountryCityLabel">Edit Country</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input asp-for="Id" type="hidden"/>
        <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" data-save="modal">Save changes</button>
      </div>
    </div>
  </div>
</form>
