
@using MVC_uppgift.Models;
@model List<People>;

<div class="mb-3 row g-2 mt-2">
    <form class="col-auto border-dark" asp-controller="People" asp-action="Index">
        <input class="form-control" name="SearchInput" list="ListOfPeople" placeholder="Search people">
    </form>

    <div class="col"></div>

    <div class="col-auto dropdown">
      <button style="width:14.5vw" class="btn btn-success dropdown-toggle" 
              type="button"  data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
        Add people
      </button>
      <form class="dropdown-menu p-4" asp-controller="People" asp-action="AddPeople">
        <div class="mb-3">
          <label for="NameInput" class="form-label">Name</label>
          <input type="text" class="form-control" id="NameInput" name="NameInput">
        </div>
        <div class="mb-3">
          <label for="PhoneNumber" class="form-label">Phone number</label>
          <input type="text" class="form-control" id="PhoneNumber" name="PhoneInput">
        </div>
        <div class="mb-3">
          <label for="City" class="form-label">City</label>
          <input type="text" class="form-control" id="City" name="CityInput">
        </div>
       
        <button type="submit" class="btn btn-dark">Add</button>
      </form>
    </div>
</div>

<table class="table table-dark table-hover ">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Phone Number</th>
      <th scope="col">City</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    @foreach(People Person in Model)
    {
        <tr>
            <td>@Person.Name</td>
            <td>@Person.PhoneNumber</td>
            <td>@Person.City</td>
            <td class="table-hover">
                <a class="btn btn-danger" asp-route-InputName=@Person.Name asp-controller="People" asp-action="DeletPeople">
                    <partial name="_DeletIcon"/>
                </a>
            </td> 
        </tr>
    }
  </tbody>
</table>
@*href="/People/DeletPeople/@Person.Name"*@