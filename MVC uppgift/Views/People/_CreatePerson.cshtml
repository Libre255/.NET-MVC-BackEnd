@using MVC_uppgift.Models;
@model MVC_uppgift.ViewModels.CreatePersonViewModel;

<form class="dropdown-menu p-4" method="Post" asp-controller="People" asp-action="AddPeople">
    <div class="mb-3">
        <label for="NameInput" class="form-label">Name</label>
        <input type="text" class="form-control" id="NameInput" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="PhoneNumber" class="form-label">Phone number</label>
        <input type="number" class="form-control" value=@null id="PhoneNumber" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="City" class="form-label">City</label>
        <input type="text" class="form-control" id="City" asp-for="City">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
       
    <button type="submit" class="btn btn-dark">Add</button>
</form>

