@using MVC_uppgift.Models;
@model MVC_uppgift.ViewModels.PeopleViewModel;

<table id="tableOfPeople" class="table table-dark table-hover ">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Phone Number</th>
      <th scope="col">City</th>
      <th scope="col">Language</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    @foreach(var Person in Model.PeopleList)
    {
        <tr>
            <td>@Person.Name</td>
            <td>@Person.PhoneNumber</td>
            <td>@Person.City</td>
            <td>
                @{
                    if(Person.PeopleLanguagues != null)
                    {
                        @foreach(var L in Person.PeopleLanguagues)
                        {
                                if(L.Language != null)
                                {
                                    <p>@L.Language.Name</p>;
                                }
                        }
                    }
                }
            </td>
            <td class="table-hover">
                <a class="btn btn-danger" asp-route-InputName=@Person.Name asp-controller="People" asp-action="DeletPeople">
                    <partial name="_DeletIcon"/>
                </a>
                <a  asp-route-InputName=@Person.Id asp-controller="People" asp-action="EditPeople"
                    class="btn btn-info" onclick="showModal()" >
                    <partial name="_EditIcon"/>
                </a>
            </td> 
        </tr>
 
    }
  </tbody>
</table>
